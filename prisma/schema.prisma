generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  image         String?
  emailVerified DateTime?

  // Stripe
  stripeCustomerId String? @unique
  subscriptionStatus String? // "active", "canceled", "past_due", null
  subscriptionTier String?  // "premium", null

  // Purchases
  purchases     Purchase[]
  savedPrompts  SavedPrompt[]

  // Auth
  accounts      Account[]
  sessions      Session[]

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Prompt {
  id          String   @id @default(cuid())

  // Content
  title       String
  description String
  content     String   @db.Text  // The actual prompt template
  variables   Json?    // [{name: "topic", description: "...", default: "..."}]

  // Categorization
  category    String   // "coding", "writing", "business", "research", "creative", "productivity"
  subcategory String?
  tags        String[] // ["gpt-4", "claude", "code-generation", "chain-of-thought"]

  // AI Platform compatibility
  platforms   String[] // ["chatgpt", "claude", "gemini", "llama"]

  // Pricing
  tier        String   @default("free") // "free", "starter", "pro", "enterprise"
  packId      String?
  pack        PromptPack? @relation(fields: [packId], references: [id])

  // Metrics
  copyCount   Int      @default(0)
  viewCount   Int      @default(0)
  rating      Float?

  // Meta
  featured    Boolean  @default(false)
  published   Boolean  @default(true)

  savedBy     SavedPrompt[]

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model PromptPack {
  id          String   @id @default(cuid())

  name        String
  description String
  slug        String   @unique

  // Pricing (in cents)
  price       Int      // e.g., 1900 = $19.00

  // Stripe
  stripePriceId String?

  prompts     Prompt[]
  purchases   Purchase[]

  featured    Boolean  @default(false)
  published   Boolean  @default(true)

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Purchase {
  id              String     @id @default(cuid())

  userId          String
  user            User       @relation(fields: [userId], references: [id])

  packId          String?
  pack            PromptPack? @relation(fields: [packId], references: [id])

  // Or premium subscription
  subscriptionType String?   // "premium_monthly", "premium_lifetime"

  // Stripe
  stripePaymentId String?
  amount          Int        // in cents

  createdAt       DateTime   @default(now())
}

model SavedPrompt {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  promptId  String
  prompt    Prompt   @relation(fields: [promptId], references: [id])

  createdAt DateTime @default(now())

  @@unique([userId, promptId])
}
